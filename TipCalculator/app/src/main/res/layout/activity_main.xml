<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/base"
    android:weightSum="1"
    android:baselineAligned="false">


    <Space
        android:layout_width="20dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp" />

    <RelativeLayout android:id="@+id/priceLayout"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_span="70">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Prix"
            android:id="@+id/priceView"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/space"></TextView>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:id="@+id/space" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="4"
            android:id="@+id/priceText"
            android:enabled="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/space" />
    </RelativeLayout>

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp" />

    <RelativeLayout android:id="@+id/tipPercentLayout"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_span="70">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="% Tip"
            android:id="@+id/tipPercentView"
            android:autoText="false"
            android:layout_alignParentTop="false"
            android:layout_toStartOf="@+id/space2"
            android:layout_centerVertical="true"></TextView>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:id="@+id/space2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="4"
            android:id="@+id/tipPercentText"
            android:layout_alignParentTop="false"
            android:layout_toEndOf="@+id/space2"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp" />

    <RelativeLayout android:id="@+id/nbPersonnesLayout"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_span="70">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="# Personnes"
            android:id="@+id/nbPersonnesView"
            android:layout_toStartOf="@+id/space3"
            android:layout_centerVertical="true"></TextView>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="false"
            android:layout_centerInParent="true"
            android:id="@+id/space3" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="4"
            android:id="@+id/nbPersonnesText"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/space3" />

    </RelativeLayout>

    <Space
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate Share"
            android:id="@+id/calculateButton"
            android:layout_column="12"
            android:layout_marginLeft="210dp"
            android:layout_marginRight="210dp"
            android:onClick="calculate"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</TableLayout>